<nav class="breadcrumbs" role="menubar" aria-label="breadcrumbs">
  <li role="menuitem">
    <%= link_to t("home"), root_path %>
  </li>
  <li role="menuitem">
    <a href="/areas"><%= t("areas.menu.title") %></a>
  </li>
  <li role="menuitem">
    <a href="#"><%= @area.name %></a>
  </li>
  <li role="menuitem" class="unavailable" role="button" aria-disabled="true">
    <%= @department.name %>
  </li>
</nav>

<div class="browse-panes">

  <div class="small-12 medium-3 column">
    <%= render 'areas/menu' %>
  </div>

  <div class="pane-second small-12 medium-3 column">
    <h2><%= @area.name %></h2>
    <%= render 'departments/menu' %>
  </div>

  <div class="pane-third text small-12 medium-6 column">
    <%= render @department %>
  </div>
</div>
