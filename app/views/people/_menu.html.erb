<div class="people-photo">
  <figure>
    <%= profile_picture(person) %>
  </figure>
</div>

<ul class="side-nav">

  <% if person.should_display_profile? %>
    <li data-magellan-arrival="profile">
      <a href="#profile">
        <%= t("people.profile") %>
      </a>
    </li>
  <% end %>

  <% if person.should_display_declarations? %>
    <li data-magellan-arrival="assets_declarations">
      <a href="#assets_declarations">
        <%= t("people.assets_declarations") %>
      </a>
    </li>

    <li data-magellan-arrival="activities_declarations">
      <a href="#activities_declarations">
        <%= t("people.activities_declarations") %>
      </a>
    </li>
  <% end %>

  <% if person.should_display_calendar? %>
    <% if @person.previous_calendar_url.present? %>
      <li>
        <%= link_to t("people.calendar.until", until: format_date(@person.previous_calendar_until)),
                    @person.previous_calendar_url,
                    target: '_blank' %>
      </li>
      <% if @person.calendar_url.present? %>
        <li>
          <%= link_to t("people.calendar.from", from: format_date(@person.previous_calendar_until.next_day)),
                      @person.calendar_url ,
                      target: '_blank' %>
        </li>
      <% end %>
    <% elsif @person.calendar_url.present? %>
      <li>
        <%= link_to t("people.calendar.official"), @person.calendar_url, target: '_blank' %>
      </li>
    <% end %>
  <% end %>
</ul>
