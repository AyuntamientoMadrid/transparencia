<%= form_for person, url: hide_person_path(person), method: :put do |f| %>
  <div class="row">
    <div class="small-12 large-3 columns">
      <%= f.date_field :hidden_at %>
    </div>
    <div class="small-12 large-9 columns">
      <%= f.text_field :hidden_reason %>
    </div>
  </div>
  <%= f.submit t('shared.submit')%>
<% end %>
