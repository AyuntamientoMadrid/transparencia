<% cache [locale_key, @spokespeople_by_name_initial] do %>

  <% provide :title do %><%= t("transparency") %> - <%= t("people.spokespeople.title") %><% end %>

  <ul class="breadcrumbs" aria-label="breadcrumbs">
    <li>
      <%= link_to t("home"), root_path %>
    </li>
    <li class="unavailable" aria-disabled="true">
      <%= t("people.spokespeople.title") %>
    </li>
  </ul>

  <div class="people">
    <div class="small-12 column">
      <h1><%= t("people.spokespeople.title") %></h1>

      <% @spokespeople_by_name_initial.each do |name_initial, spokespeople| %>
        <h2 class="lead"><%= name_initial %></h2>
        <ul class="people-list-text">
          <% spokespeople.each do |spokesperson| %>
            <li>
              <%= link_to spokesperson do %>
                <div class="people-photo">
                  <figure>
                    <%= image_tag spokesperson.portrait.url(:medium) %>
                  </figure>
                </div>
                <h3><%= spokesperson.name %></h3>
              <% end %>
              <p><%= spokesperson.role %></p>
            </li>
          <% end %>
        </ul>
      <% end %>

    </div>
  </div>
<% end %>
