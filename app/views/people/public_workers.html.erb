<% cache [locale_key, @public_workers_by_name_initial] do %>

  <% provide :title do %><%= t("transparency") %> - <%= t("people.public_workers.title") %><% end %>

  <ul class="breadcrumbs" aria-label="breadcrumbs">
    <li>
      <%= link_to t("home"), root_path %>
    </li>
    <li class="unavailable" aria-disabled="true">
      <%= t("people.public_workers.title") %>
    </li>
  </ul>

  <div class="people">
    <div class="small-12 column">
      <h1><%= t("people.public_workers.title") %></h1>

      <% @public_workers_by_name_initial.each do |name_initial, public_workers| %>
        <h2 class="lead"><%= name_initial %></h2>
        <ul class="people-list-text">
          <% public_workers.each do |public_worker| %>
            <li>
              <%= link_to public_worker do %>
                <div class="people-photo">
                  <figure>
                    <%= image_tag public_worker.portrait.url(:medium) %>
                  </figure>
                </div>
                <h3><%= public_worker.name %></h3>
              <% end %>
              <p><%= public_worker.role %></p>
            </li>
          <% end %>
        </ul>
      <% end %>

    </div>
  </div>
<% end %>
