<% cache [locale_key, @temporary_workers_by_name_initial] do %>

  <% provide :title do %><%= t("transparency") %> - <%= t("people.temporary_workers.title") %><% end %>

  <ul class="breadcrumbs" aria-label="breadcrumbs">
    <li>
      <%= link_to t("home"), root_path %>
    </li>
    <li class="unavailable" aria-disabled="true">
      <%= t("people.temporary_workers.title") %>
    </li>
  </ul>

  <div class="people">
    <div class="small-12 column">
      <h1><%= t("people.temporary_workers.title") %></h1>

      <% @temporary_workers_by_name_initial.each do |name_initial, temporary_workers| %>
        <h2 class="lead"><%= name_initial %></h2>
        <ul class="people-list-text">
          <% temporary_workers.each do |worker| %>
            <li>
              <%= link_to worker do %>
                <div class="people-photo">
                  <figure>
                    <%= image_tag worker.portrait.url(:medium) %>
                  </figure>
                </div>
                <h3><%= worker.name %></h3>
              <% end %>
              <p><%= worker.role %></p>
            </li>
          <% end %>
        </ul>
      <% end %>

    </div>
  </div>
<% end %>
