<nav class="breadcrumbs" role="menubar" aria-label="breadcrumbs">
  <li role="menuitem">
    <%= link_to t("home"), root_path %>
  </li>
  <li role="menuitem">
    <%= link_to t("people.title"), people_path %>
  </li>
  <li role="menuitem" class="unavailable" role="button" aria-disabled="true">
    <%= @person.name %>
  </li>
</nav>

<section class="people-card row">

  <div class="show-for-medium-up">
    <div data-magellan-expedition="fixed" class="fixed-left-sidebar">
      <%= render 'menu' %>
    </div>
  </div>

  <div class="small-12 medium-3 column">
    <div class="show-for-small">
      <div data-magellan-expedition>
        <%= render 'menu' %>
      </div>
    </div>
  </div>

  <div class="small-12 medium-9 column">
    <div class="people-info">
      <div class="right">
        <%= image_tag (@person.party.logo), alt: @person.party.name, size: "150x75" %>
      </div>
      <h1><%= @person.name %></h1>
      <p class="role"><%= @person.role %></p>
    </div>

    <a name="responsibility" data-magellan-destination="responsibility"></a>
    <h2><%= t("people.responsibility") %></h2>
    <%= @person.functions.try(:html_safe) %>

    <a name="biography" data-magellan-destination="biography"></a>
    <h2><%= t("people.biography") %></h2>
    <%= @person.biography.try(:html_safe) %>

    <%= render 'diary' %>

    <%= render 'assets_declarations' %>

    <%= render 'activities_declarations' %>

    <%= render 'contact' %>
  </div>
</section>
