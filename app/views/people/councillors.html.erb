<nav class="breadcrumbs" role="menubar" aria-label="breadcrumbs">
  <li role="menuitem">
    <%= link_to t("home"), root_path %>
  </li>
  <li role="menuitem" class="unavailable" role="button" aria-disabled="true">
    <%= t("people.councillors.title") %>
  </li>
</nav>

<div class="people">
  <div class="small-12 column">

    <h1 class="lead"><%= t("people.councillors.title") %></h1>

    <p>
      <%= t('orders.order_by') %>
    </p>

    <ul>
      <% Person.orders.each do |order| %>
        <li><%= link_to t("orders.#{order}"), councillors_people_path(order: order) %></li>
      <% end %>
    </ul>

    <% cache [locale_key, @order, @people_groups] do %>
      <% @people_groups.each do |group_name, people| %>
        <h2 class="lead"><%= group_name %></h2>
        <ul class="people-list">
          <% people.each do |person| %>
            <% cache [locale_key, person, person.party] do %>
              <li>
                <%= link_to person do %>
                  <div class="people-photo text-center">
                    <figure>
                      <%= profile_picture(person) %>
                      <span class="people-affiliation"><%= person.party_name %></span>
                    </figure>
                  </div>
                  <h3><%= person.name %></h3>
                <% end %>
                <p><%= person.role %></p>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>
