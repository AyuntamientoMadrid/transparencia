<nav class="breadcrumbs" role="menubar" aria-label="breadcrumbs">
  <li role="menuitem">
    <%= link_to t("home"), root_path %>
  </li>
  <li role="menuitem" class="unavailable" role="button" aria-disabled="true">
    <%= t("people.councillors.title") %>
  </li>
</nav>

<div class="people">
  <div class="small-12 column">

    <h1 class="lead"><%= t("people.councillors.title") %></h1>

    <% cache [locale_key, @people] do %>
      <ul class="people-list">
        <% @people.each do |person| %>
          <% cache [locale_key, person, person.party] do %>
            <li>
              <%= link_to person do %>
                <div class="people-photo">
                  <figure>
                    <%= profile_picture(person) %>
                    <span class="people-affiliation"><%= person.party_name %></span>
                  </figure>
                </div>
                <h3><%= person.name %></h3>
              <% end %>
              <p><%= person.role %></p>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
