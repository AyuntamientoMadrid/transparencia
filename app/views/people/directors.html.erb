<% cache [locale_key, @people] do %>
  <nav class="breadcrumbs" role="menubar" aria-label="breadcrumbs">
    <li role="menuitem">
      <%= link_to t("home"), root_path %>
    </li>
    <li role="menuitem" class="unavailable" role="button" aria-disabled="true">
      <%= t("people.directors.title") %>
    </li>
  </nav>

  <div class="people">
    <div class="small-12 column">
      <h1 class="lead"><%= t("people.directors.title") %></h1>

      <p>
        <%= t('orders.order_by') %>
      </p>

      <ul>
        <% Person.orders.each do |order| %>
          <li><%= link_to t("orders.#{order}"), directors_people_path(order: order) %></li>
        <% end %>
      </ul>

      <% @people_groups.each do |group_name, people| %>
        <h2 class="lead"><%= group_name %></h2>
        <ul class="people-list-text">
          <% people.each do |person| %>
            <li><%= link_to person.name, person_path(person) %>, <%= person.unit %></li>
          <% end %>
        </ul>
      <% end %>

    </div>
  </div>
<% end %>
