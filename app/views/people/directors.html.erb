<% cache [locale_key, @directors_by_name_initial] do %>

  <% provide :title do %><%= t("transparency") %> - <%= t("people.directors.title") %><% end %>

  <ul class="breadcrumbs" aria-label="breadcrumbs">
    <li>
      <%= link_to t("home"), root_path %>
    </li>
    <li class="unavailable" aria-disabled="true">
      <%= t("people.directors.title") %>
    </li>
  </ul>

  <div class="people">
    <div class="small-12 column">
      <h1><%= t("people.directors.title") %></h1>

      <% @directors_by_name_initial.each do |name_initial, directors| %>
        <h2 class="lead"><%= name_initial %></h2>
        <ul class="people-list-text">
          <% directors.each do |director| %>
            <li>
              <%= link_to director do %>
                <div class="people-photo">
                  <figure>
                    <%= profile_picture(director) %>
                    <span class="people-affiliation"><%= director.party_name %></span>
                  </figure>
                </div>
                <h3><%= director.name %></h3>
              <% end %>
              <p><%= director.role %></p>
            </li>
          <% end %>
        </ul>
      <% end %>

    </div>
  </div>
<% end %>
