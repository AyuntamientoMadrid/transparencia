<%
  title = @selected.title if @selected.present? && @selected.level == 1
  title = @selected.parent.title if @selected.parent.present? && @selected.level == 2
 %>
<h2><small><%= title %></small></h2>
<% @pages_section2.each do |page| %>
  <%= content_tag_for :div, page do %>
    <%= link_to pages_path(selected: page.id), class: active_class(@selected, page) do %>
      <span><%= page.title %></span>
      <span>Descr</span>
      <i class="icon-angle-right"></i>
    <% end %>    
  <% end %>
<% end %>