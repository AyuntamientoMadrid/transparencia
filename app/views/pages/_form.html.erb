<%= form_for @page do |f| %>
  <%= f.collection_select :parent_id, Page.arrange_as_array({:order => 'title'}, @page.possible_parents) , :id, :name_for_selects, :include_blank => true %>
  <%= f.text_field :title %>
  <%= f.text_field :subtitle %>
  <%= f.text_field :link %>
  <%= f.label(:content, Page.human_attribute_name(:content)) %>
  <%= f.trix_editor :content %>
  <br>
  <%= f.submit t('shared.submit'), class: "button radius success" %>
  <%= link_to t('shared.back'), :back, class: "button radius secondary" %>
<% end %>
