<%= form_for @page do |f| %>
  <%= f.select :parent_id, pages_options_for_select, label: "Padre" %>
  <%= f.text_field :title, label: "Título" %>
  <%= f.text_field :subtitle, label: "Sub título" %>
  <%= f.text_field :link, label: "Enlace externo" %>
  <%= f.label(:content, "Contenido") %>
  <%= f.trix_editor :content, label: "Contenido" %>
  <br>
  <%= f.submit "Guardar", class: "tiny button success" %>
  <%= link_to "Atrás", :back, class: 'button tiny' %> 
<% end %>