<%= content_tag_for :div, page, class: "level#{page.level}" do %>
  <%= link_to '', edit_page_path(page), class: 'icon-edit has-tip', data: {tooltip: true}, title: "edit" %> 

  <% if page.is_link? %>
    <%= link_to page.link, target: "_blank" do %>
      <span><%= page.title %></span>
      <i class="icon-angle-right"></i>
    <% end %>
  <% elsif page.is_content? %>    
    <%= link_to page_path(page) do %>
      <span><%= page.title %></span>
      <i class="icon-angle-right"></i>
    <% end %>
  <% else %>  
    <%= link_to pages_path(selected: page.id), class: active_class(@selected.try(:parent) || @selected, page) do %>
      <span><%= page.title %></span>
      <i class="icon-angle-right"></i>
    <% end %>
  <% end %>
<% end %>

<% if page.level== 3 && !page.pages.empty? %>
  <%= render page.pages %>
<% end %>