<h1><%= t('admin.activities_uploads.index.title') %></h1>

<p class="text-center">
  <%= link_to t('admin.activities_uploads.index.new_button'),
              new_admin_activities_upload_path,
              class: 'button' %>
</p>

<table>
  <thead>
    <tr>
      <th><%= ActivitiesUpload.human_attribute_name(:created_at) %></th>
      <th><%= ActivitiesUpload.human_attribute_name(:author_email) %></th>
      <th><%= ActivitiesUpload.human_attribute_name(:translated_successful) %></th>
    </tr>
  </thead>
  <tbody>
    <% @activities_uploads.each do |p| %>
      <tr>
        <td>
          <%= link_to(p.created_at, admin_activities_upload_path(p), style: "display: block;") %>
        </td>
        <td>
          <%= link_to(p.author_email, admin_activities_upload_path(p), style: "display: block;") %>
        </td>
        <td>
          <%= link_to(p.translated_successful, admin_activities_upload_path(p), style: "display: block;") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @activities_uploads %>
