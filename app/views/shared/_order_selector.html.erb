<form class="inline-block">
  <label for="order-selector"><%= t("orders.order_by") %></label>
  <select class="js-location-changer"
          data-order="<%= @order %>"
          name="order-selector"
          id="order-selector">
     <% Person.orders.each do |order| %>
       <option <%= 'selected' if order == @order %>
          value='<%= current_path_with_query_params(order: order) %>'>
         <%= t("orders.#{order}") %>
       </option>
     <% end %>
   </select>
</form>
